	<DataTemplate
		x:Key="HarmonicTemplate"
		>
		<Rack
			Rows="* *"
			Columns="2* 3* 2* * * *"
			Opacity="{Binding Magnitude, Converter={StaticResource HarmonicOpacityConverter}}"
			>
			<Rack.Resources>
				<LinearGradientBrush
					x:Key="ActiveHarmonicBrush"
					StartPoint="0,0"
					EndPoint="0,1"
					>
					<GradientStop Offset="0.0" Color="{StaticResource RegularColor}" />
					<GradientStop Offset="0.5" Color="Pink" />
					<GradientStop Offset="1.0" Color="{StaticResource RegularColor}" />
				</LinearGradientBrush>

				<LinearGradientBrush
					x:Key="HarmonicBrush"
					StartPoint="0,0"
					EndPoint="0,1"
					>
					<GradientStop Offset="0.0" Color="{StaticResource RegularColor}" />
					<GradientStop Offset="0.5" Color="{StaticResource RegularColor}" />
					<GradientStop Offset="1.0" Color="{StaticResource RegularColor}" />
				</LinearGradientBrush>

				<KeyToValueConverter
					x:Key="IsActiveToBrushConverter"
					Key="{True}"
					Value="{StaticResource ActiveHarmonicBrush}"
					ByDefault="{StaticResource HarmonicBrush}"
					/>
			</Rack.Resources>

			<Border
				Rack.Cell="R0 C0 RS2 CS6"
				Background="{Binding IsEnabled, Converter={StaticResource IsActiveToBrushConverter}}"
				CornerRadius="5"
				Opacity="0.617"
				/>

			<Field
				Rack.Cell="C0"
				Keyboard="Numeric"
				Text="{Binding Magnitude, Mode=TwoWay, Converter={StaticResource DoubleToStringTwoWayConverter}}"
				/>
			<Field
				Rack.Cell="C1"
				Keyboard="Numeric"
				Text="{Binding Frequency, Mode=TwoWay, Converter={StaticResource DoubleToStringTwoWayConverter}}"
				/>
			<Rack
				Rack.Cell="C2"
				Columns="* *"
				>
				<Title
					Rack.Cell="C0"
					Margin="2"
					FontSize="12"
					Alignment.Y="From"
					Text="{Binding Phase, Converter={StaticResource RadianDegreeFormattedConverter}}"
					/>
				<Title
					Rack.Cell="C0"
					Margin="2"
					FontSize="12"
					Alignment.Y="Till"
					Text="{Binding Phase, Mode=TwoWay, Converter={StaticResource RadianPiFormattedConverter}}"
					/>
				<Field
					Rack.Cell="C1"
					Keyboard="Numeric"
					Text="{Binding Phase, Converter={StaticResource DoubleToStringTwoWayConverter}}"
					/>
			</Rack>

			<Slider
				Rack.Cell="C0 R1"
				Minimum="{Binding Spectrum.Magnitude.Limit.Lower, Source={Store p:MusicalPresenter}}"
				Maximum="{Binding Spectrum.Magnitude.Limit.Upper, Source={Store p:MusicalPresenter}}"
				Value="{Binding Magnitude, Mode=TwoWay}"
				/>
			<Slider
				Rack.Cell="C1 R1"
				Maximum="{Binding Spectrum.Frequency.Limit.Upper, Source={Store p:MusicalPresenter}, Converter={StaticResource ScaleConverter}}"
				Minimum="{Binding Spectrum.Frequency.Limit.Lower, Source={Store p:MusicalPresenter}, Converter={StaticResource ScaleConverter}}"
				Value="{Binding Frequency, Mode=TwoWay, Converter={StaticResource ScaleConverter}}"
				/>
			<Slider
				Rack.Cell="C2 R1"
				Maximum="{StaticResource PositiveSinglePi}"
				Minimum="{StaticResource NegativeSinglePi}"
				Value="{Binding Phase, Mode=TwoWay}"
				/>

			<Picker
				Rack.Cell="C3 R0"
				Alignment.Y="Center"
				ItemsSource="{Binding BasisFuncs}"
				SelectedItem="{Binding BasisFunc, Mode=TwoWay}"
				ItemDisplayBinding="{Binding Converter={StaticResource DelegateToNameConverter}}"
				/>
			<Picker
				Rack.Cell="C3 R1"
				Alignment.Y="Center"
				ItemsSource="{Enum m:PhaseMode}"
				SelectedItem="{Binding PhaseMode, Mode=TwoWay}"
				/>
			<Switch
				Rack.Cell="C4 R0 RS2"
				IsToggled="{Binding IsEnabled, Mode=TwoWay}"
				/>
			<Button
				Rack.Cell="C5 R0 RS2"
				Text="➖"
				CommandParameter="{Binding}"
				Command="{Context Key=Set.Delete, StoreKey=vm:HarmonicManager, KeyPath=ActiveProfile}"
				/>
		</Rack>
	</DataTemplate>

