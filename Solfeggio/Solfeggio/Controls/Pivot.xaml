<ContentView
	x:Class="Solfeggio.Controls.Pivot"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:m="clr-namespace:Ace.Markup;assembly=Ace">

	<ContentView.Content>

		<Grid
			m:Rack.Columns="* 4*">

			<ListView
				m:Rack.Cell="C0">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<Label
								Text="{Binding Header}" />
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>

			<ScrollView
				m:Rack.Cell="C1">
				<ContentPresenter />
			</ScrollView>

		</Grid>

	</ContentView.Content>

</ContentView>