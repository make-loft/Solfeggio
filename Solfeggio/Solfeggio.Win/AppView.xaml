<Window 
	x:Class="Solfeggio.AppView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:views="clr-namespace:Solfeggio.Views"
	xmlns:viewModels="clr-namespace:Solfeggio.ViewModels"
	DataContext="{Store Key=viewModels:ProcessingManager}"
	Height="{Smart Height, DefaultValue=400}"
	Width="{Smart Width, DefaultValue=1000}"
	Left="{Smart Left, DefaultValue=NaN}"
	Top="{Smart Top, DefaultValue=NaN}"
	Title="{Localizing Key=Solfeggio, Modifiers=ToUpper}">

	<views:SolfeggioView/>

</Window>
