<Application
	x:Class="Solfeggio.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	StartupUri="AppView.xaml"
	Startup="App_OnStartup"
	Exit="App_OnExit"
	>
	<Application.Resources>
		<Map>
			<ResourceDictionary.MergedDictionaries>
				<Map Source="pack://application:,,,/Ace;component/Ace.Zest/Dictionaries/AppConverters.xaml" />
				<Map Source="Palettes/Values.xaml" />
				<Map Source="Palettes/ColorPalettes.xaml" />
				<Map BasedOn="{StaticResource Nature}" />
				<Map Source="Palettes/Brushes.xaml" />
				<Map Source="Palettes/Converters.xaml" />
				<Map Source="Palettes/Styles.xaml" />
				<Map Source="Palettes/Sets.xaml" />
				<Map Source="Palettes/Templates.Desktop.xaml" />
				<Map Source="Palettes/Sets.Visualization.xaml" />
				<Map Source="Palettes/Templates.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<Style
		TargetType="Switch">
				<Setter
			Property="Width"
			Value="32" />
				<Setter
			Property="Height"
			Value="16" />
				<Setter
			Property="Margin"
			Value="{StaticResource RegularMargin}" />
				<Setter
			Property="Template"
			Value="{StaticResource SwitchControlTemplate}" />
			</Style>
		</Map>
	</Application.Resources>
</Application>
