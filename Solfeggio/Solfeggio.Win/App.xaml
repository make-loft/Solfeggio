<Application 
	x:Class="Solfeggio.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:m="clr-namespace:Ace.Markup;assembly=Ace"
	xmlns:s="clr-namespace:System;assembly=mscorlib"
	StartupUri="AppView.xaml"
	Startup="App_OnStartup"
	Exit="App_OnExit">
	
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary
					Source="pack://application:,,,/Ace;component/Ace.Zest/Dictionaries/AppConverters.xaml" />
				<ResourceDictionary
					Source="Palettes/Values.xaml" />
				<ResourceDictionary
					Source="Palettes/Colors.xaml" />
				<ResourceDictionary
					Source="Palettes/Brushes.xaml" />
				<ResourceDictionary
					Source="Palettes/Converters.xaml" />
				<ResourceDictionary
					Source="Palettes/Templates.xaml" />
				<ResourceDictionary
					Source="Palettes/Styles.xaml" />
				<ResourceDictionary
					Source="Palettes/Sets.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<m:Set
				x:Key="AllowedPowsOf2">
				<s:Int32>9</s:Int32>
				<s:Int32>10</s:Int32>
				<s:Int32>11</s:Int32>
				<s:Int32>12</s:Int32>
				<s:Int32>13</s:Int32>
			</m:Set>

		</ResourceDictionary>
	</Application.Resources>
</Application>
