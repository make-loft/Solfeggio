<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<GradientStopCollection
		x:Key="RainbowGradient">
		<GradientStop
			Color="#FF00FF"
			Offset=".0" />
		<GradientStop
			Color="#FF0000"
			Offset=".17" />
		<GradientStop
			Color="#FFFF00"
			Offset=".33" />
		<GradientStop
			Color="#00FF00"
			Offset=".5" />
		<GradientStop
			Color="#00FFFF"
			Offset=".66" />
		<GradientStop
			Color="#0000FF"
			Offset=".73" />
		<GradientStop
			Color="#FF00FF"
			Offset="1.0" />
	</GradientStopCollection>

	<GradientStopCollection
		x:Key="BrightnessGradient">

		<GradientStop
			Color="#FF888888"
			Offset="0.00" />
		<GradientStop
			Color="#FF888888"
			Offset="0.01" />

		<GradientStop
			Color="#00888888"
			Offset="0.16" />
		<GradientStop
			Color="#00888888"
			Offset="0.18" />

		<GradientStop
			Color="#FFFFFFFF"
			Offset="0.32" />
		<GradientStop
			Color="#FFFFFFFF"
			Offset="0.34" />

		<GradientStop
			Color="#FF888888"
			Offset="0.49" />
		<GradientStop
			Color="#FF888888"
			Offset="0.51" />

		<GradientStop
			Color="#FF000000"
			Offset="0.65" />
		<GradientStop
			Color="#FF000000"
			Offset="0.67" />

		<GradientStop
			Color="#00888888"
			Offset="0.82" />
		<GradientStop
			Color="#00888888"
			Offset="0.84" />

		<GradientStop
			Color="#FF888888"
			Offset="0.99" />
		<GradientStop
			Color="#FF888888"
			Offset="1.0" />

	</GradientStopCollection>

	<DrawingBrush
		x:Key="ChessBrush"
		TileMode="Tile"
		Viewport="0,0,12,12"
		ViewportUnits="Absolute">
		<DrawingBrush.Drawing>
			<GeometryDrawing
				Brush="White"
				Geometry="M6,6 L0,6 0,12 6,12 6,6 12,6 12,0 6,0 Z" />
		</DrawingBrush.Drawing>
	</DrawingBrush>

	<LinearGradientBrush
		x:Key="RainbowBrush.H"
		StartPoint="0,0"
		EndPoint="1,0"
		GradientStops="{StaticResource RainbowGradient}" />

	<LinearGradientBrush
		x:Key="RainbowBrush.V"
		StartPoint="0,0"
		EndPoint="0,1"
		GradientStops="{StaticResource RainbowGradient}" />

	<LinearGradientBrush
		x:Key="BrightnessBrush.H"
		StartPoint="1,0"
		EndPoint="0,0"
		GradientStops="{StaticResource BrightnessGradient}" />

	<LinearGradientBrush
		x:Key="BrightnessBrush.V"
		StartPoint="0,1"
		EndPoint="0,0"
		GradientStops="{StaticResource BrightnessGradient}" />

	<LinearGradientBrush
		x:Key="SpectrumBackgroundBrush"
		StartPoint="0,0"
		EndPoint="0,1">
		<GradientStop
			Color="#FF880022"
			Offset="0" />
		<GradientStop
			Color="#FFFFBE22"
			Offset="1" />
	</LinearGradientBrush>

	<LinearGradientBrush
		x:Key="SplitterBrush"
		StartPoint="0,0"
		EndPoint="0,1">
		<GradientStop
			Color="#FFFFBE22"
			Offset="0" />
		<GradientStop
			Color="#FF880022"
			Offset="1" />
	</LinearGradientBrush>

	<SolidColorBrush
		x:Key="MagnitudeSpectrumFillBrush.FFT"
		Color="Transparent" />

	<SolidColorBrush
		x:Key="MagnitudeSpectrumStrokeBrush.FFT"
		Color="Violet"/>

	<LinearGradientBrush
		x:Key="MagnitudeSpectrumFillBrush.MPI"
		EndPoint="0,1"
		StartPoint="0,0">
		<GradientStop
			Color="#FFFFBE22"
			Offset="0.33" />
		<GradientStop
			Color="#00880022"
			Offset="1.00" />
	</LinearGradientBrush>

	<LinearGradientBrush
		x:Key="MagnitudeSpectrumStrokeBrush.MPI"
		EndPoint="0,1"
		StartPoint="0,0">
		<GradientStop
			Color="#FF880022"
			Offset="0.33" />
		<GradientStop
			Color="#00FFBE22"
			Offset="1.00" />
	</LinearGradientBrush>

	<SolidColorBrush
		x:Key="WaveInStrokeBrush"
		Color="Crimson" />

	<SolidColorBrush
		x:Key="WaveOutStrokeBrush"
		Color="YellowGreen" />

	<LinearGradientBrush
		x:Key="PianoCanvasBackgroundBrush"
		StartPoint="0,0"
		EndPoint="0,1">
		<GradientStop
			Offset="0.618"
			Color="#FF884488" />
		<GradientStop
			Offset="1.0"
			Color="#FFFFFFFF" />
	</LinearGradientBrush>

	<LinearGradientBrush
		x:Key="PressToneKeyBrush">
		<GradientStop
			Offset="0.0"
			Color="#00FFFFFF" />
		<GradientStop
			Offset="1.0"
			Color="Red" />
	</LinearGradientBrush>

	<LinearGradientBrush
		x:Key="PressHalfToneKeyBrush">
		<GradientStop
			Offset="0.0"
			Color="#00000000" />
		<GradientStop
			Offset="1.0"
			Color="Red" />
	</LinearGradientBrush>

	<SolidColorBrush
		x:Key="FullToneKeyBrush"
		Color="WhiteSmoke" />

	<LinearGradientBrush
		x:Key="HalfToneKeyBrush"
		StartPoint="0,0"
		EndPoint="0,1">
		<GradientStop
			Offset="0.0"
			Color="#00FFBE22" />
		<GradientStop
			Offset="0.1"
			Color="#FF3F3E3E" />
		<GradientStop
			Offset="0.95"
			Color="#FF3F3E3E" />
		<GradientStop
			Offset="1.0"
			Color="#FF0C0C0C" />
	</LinearGradientBrush>

	<SolidColorBrush
		x:Key="MarkerBrush"
		Color="Green"
		Opacity="0.3" />

	<SolidColorBrush
		x:Key="ButterflyGridBrush"
		Color="Violet"
		Opacity="0.3" />

	<SolidColorBrush
		x:Key="NoteGridBrush"
		Color="Purple"
		Opacity="0.3" />

	<SolidColorBrush
		x:Key="HzBrush"
		Color="Blue"
		Opacity="0.3" />

</ResourceDictionary>