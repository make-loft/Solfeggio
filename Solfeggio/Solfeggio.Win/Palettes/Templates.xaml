<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:xamarin="clr-namespace:Xamarin.Forms;assembly=Xamarin.Synonyms">

	<DataTemplate
		x:Key="DominantTemplate">
		<Grid
			Opacity="{Binding Peak.Imaginary, Converter={StaticResource DominantOpacityConverter}}"
			Rack.Columns="* * * * *">
			<TextBlock
				Rack.Cell="C0"
				Text="{Binding Peak.Imaginary, StringFormat=F2}" />
			<TextBlock
				Rack.Cell="C1"
				Text="{Binding Peak.Real, StringFormat=F2}" />
			<TextBlock
				Rack.Cell="C2"
				Text="{Binding DeltaFrequency, StringFormat={}({0:+0.00;-0.00;0.00})}" />
			<TextBlock
				Rack.Cell="C3"
				Text="{Binding EthalonFrequency, StringFormat=F2}" />
			<TextBlock
				Rack.Cell="C4"
				Text="{Binding NoteName}" />
		</Grid>
	</DataTemplate>

	<DataTemplate
		x:Key="OptionTemplate">
		<Grid
			Rack.Columns="7* 5* *">
			<ContentPresenter
				Rack.Cell="C0"
				Content="{Binding Tag}" />
			<ContentPresenter
				Rack.Cell="C1"
				Content="{Binding}" />
		</Grid>
	</DataTemplate>

	<ControlTemplate
		x:Key="SwitchControlTemplate"
		TargetType="{x:Type xamarin:Switch}">
		<Grid>
			<Border
				Width="{TemplateBinding Width}"
				Height="8"
				Background="{TemplateBinding Background}"
				CornerRadius="4">
			</Border>
			<Ellipse
				Width="{TemplateBinding Height}"
				Height="{TemplateBinding Height}"
				HorizontalAlignment="Right"
				Fill="Wheat"
				Visibility="{TemplateBinding IsChecked, Converter={StaticResource TrueToVisibleConverter}}" />
			<Ellipse
				Width="{TemplateBinding Height}"
				Height="{TemplateBinding Height}"
				HorizontalAlignment="Left"
				Fill="WhiteSmoke"
				Visibility="{TemplateBinding IsChecked, Converter={StaticResource TrueToCollapsedConverter}}" />
		</Grid>
	</ControlTemplate>

</ResourceDictionary>