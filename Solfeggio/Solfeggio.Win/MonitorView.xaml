<Window
	x:Class="Solfeggio.MonitorView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:v="clr-namespace:Solfeggio.Views"
	xmlns:vm="clr-namespace:Solfeggio.ViewModels"
	DataContext="{Store Key=vm:AppViewModel}"
	Background="{DynamicResource SpectrumBackgroundBrush}"
	Height="{Smart MonitorHeight, DefaultValue=400}"
	Width="{Smart MonitorWidth, DefaultValue=1000}"
	Left="{Smart MonitorLeft, DefaultValue=NaN}"
	Top="{Smart MonitorTop, DefaultValue=NaN}"
	Title="{Localizing Key=Monitor}"
	ResizeMode="CanResizeWithGrip"
	>
	<v:OptionsView
		/>
</Window>
